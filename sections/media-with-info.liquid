<section class="media-with-txt-{{ section.id }}">
  <div class="media-with-txt-wrapper page-width">
    <div class="media-with-txt-row">
      <div class="info-details-col">
        <h3>{{ section.settings.subtitle }}</h3>
        <h2>{{ section.settings.heading }}</h2>
        {{ section.settings.details }}
        <div class="media-with-txt-btn">
          <a href="{{ section.settings.link }}">{{ section.settings.btn }}</a>
        </div>
      </div>
      <div class="media-col-details">
       <div class="media-row media-info-slider-{{ section.id }} mobile-media">
         <div class="img-one-col">
           <img src="{{ section.settings.img-1 | img_url: 'master' }}">
         </div>
         <div class="img-two-col">
           <img src="{{ section.settings.img-2 | img_url: 'master' }}">
         </div>
         <div class="video-three-col">
          <div class="video-container">
            <video class="cust_video cust_video_auto" width="100%" height="auto" autoplay="false" loop="true" controls="false" playsinline="" muted="false" data-src-all="image" 
              src="{{ section.settings.video }}">
             </video>
             <img class="play-pause-icon" src="https://cdn.shopify.com/s/files/1/0890/8265/9139/files/Trigger.svg?v=1724378084" alt="Play/Pause Icon">
          </div>
         </div>
       </div>
        <div class="media-row desktop-media">
         <div class="img-one-col">
           <img src="{{ section.settings.img-1 | img_url: 'master' }}">
           <img src="{{ section.settings.img-2 | img_url: 'master' }}">
         </div>
         <div class="video-three-col">
          <div class="video-container">
            <video class="cust_video cust_video_auto" width="100%" height="auto" autoplay="false" loop="true" controls="false" playsinline="" muted="false" data-src-all="image" 
              src="{{ section.settings.video }}">
             </video>
             <img class="play-pause-icon" src="https://cdn.shopify.com/s/files/1/0890/8265/9139/files/Trigger.svg?v=1724378084" alt="Play/Pause Icon">
          </div>
         </div>
       </div>
      </div>
    </div>
  </div>
</section>

<style>
  .media-with-txt-{{ section.id }}{
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    width: 100%;
    box-shadow: 0 -450px 20px -20px {{ section.settings.bg }} inset;
  }
  .media-with-txt-row{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .info-details-col{
    flex: 49%;
    max-width: 49%;
    text-align: left;
  }
  .info-details-col h3{
    font-size: 14px;
    font-weight: 500;
    line-height: 21px;
    letter-spacing: 0.04em;
    text-align: left;
    color: #02010F;
    text-transform: uppercase;
  }
  .info-details-col h2{
    color: #02010F;
    font-size: 64px;
    font-weight: 700;
    line-height: 76.8px;
    letter-spacing: -0.025em;
    text-align: left;
    max-width: 585px;
    margin: 0;
    padding: 0;
    padding-bottom: 10px;
  }
 .info-details-col p{
   font-size: 18px;
   font-weight: 400;
   line-height: 30.6px;
   text-align: left;
   max-width: 585px;
    color: #02010F;
   margin: 0;
  }
  .media-with-txt-btn{
    padding-top: 20px;
    text-align: left;
  }
  .media-with-txt-btn a{
    padding: 14px 32px;
    color: #fff;
    /* background-color: #00080F; */
    background: linear-gradient(150deg, #7b8047, #608d65, #539488, #6197a4, #64889f, #4e6a85, #3a4e6b, #283351);
    text-decoration: none;
    border-radius: 8px;
    display: inline-block;
    font-size: 18px;
    font-weight: 500;
    line-height: 24px;
    text-align: center;
  }
  .media-col-details{
    flex: 49%;
    max-width: 49%;
  }
  .media-col-details img{
    width: 100%;
    height: auto;
  }
  .video-container {
  position: relative;
  width: 100%;
  height: auto;
}

.cust_video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16px;
}
  .video-container img.play-pause-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 60px;
  height: 60px;
  cursor: pointer;
  z-index: 10;
}

  
  
  @media(min-width: 750px){
    .media-row.mobile-media{
      display: none;
    }
    .media-row{
    display: flex;
  }
  .img-one-col{
    flex: 49%;
    max-width: 49%;
    margin-right: 12px;
  }
  .img-one-col img{
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .video-three-col{
    flex: 49%;
    max-width: 49%;
    margin-right: 12px;
  }
  .video-three-col video{
    width: 100%;
     height: 100%;
    max-height: 452px;
      object-fit: cover;
      border-radius: 12px;
  }
  }
@media(max-width: 749px){
    .media-with-txt-{{ section.id }}{
    padding-top: {{ section.settings.mob-padding-top }}px;
    padding-bottom: {{ section.settings.mob-padding-bottom }}px;
      box-shadow: 0 -450px 20px -20px {{ section.settings.bg }} inset;
    }
  .info-details-col{
    flex: 100%;
    max-width: 100%;
    text-align: left;
  }
  .media-col-details{
    flex: 100%;
    max-width: 100%;
  }
  .info-details-col h2{
    font-size: 24px;
    font-weight: 700;
    line-height: 28.8px;
    text-align: left;
  }
  .info-details-col p{
font-size: 16px;
font-weight: 400;
line-height: 27.2px;
text-align: left;

  }
 
  .video-three-col video{
    width: 100%;
     height: 100%;
    max-height: 264px;
      object-fit: cover;
      border-radius: 12px;
  }
  .media-row.desktop-media{
    display: none;
  }
  .media-with-txt-btn{
    width: 100%;
    padding-bottom: 30px;
  }
  .media-with-txt-btn a{
    width: 100%;
  }
  
  }
</style>

<script>
    $(document).ready(function(){

    $('.media-info-slider-{{ section.id }}').slick({
    dots: false,
    infinite: false,
    arrows: false,
    cssEase: 'linear',
    speed: 300,
    slidesToShow: 1.1,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 9999,
        settings: "unslick"
      },
      {
        breakpoint: 749,
        settings: {
          slidesToShow: 1.2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1.2,
          slidesToScroll: 1
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
    });
  });
</script>

