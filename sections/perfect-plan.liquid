<section class="perfect-plan-{{ section.id }}">
  <div class="perfect-plan-wrapper page-width">
    <div class="perfect-plan-info">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.details }}</p>
    </div>
    <div class="perfect-plans-row">
      {% for block in section.blocks %}
        <div class="perfect-plan-col" style="background-color: {{ block.settings.bg }}; color: {{ block.settings.txt }};">
          <div class="plan-top-info">
            <p class="subtitle-plan">{{ block.settings.subtitle }}</p>
            <h3 style="color: {{ block.settings.txt }};">{{ block.settings.price }}<span class="small-info-heading">/month</span></h3>
            <p class="details-plan">{{ block.settings.details }}</p>
          </div>
          <div class="plan-advantages">
            <div class="advantage-row">
              <img src="{{ block.settings.icon | img_url: 'master' }}">
              <p>{{ block.settings.advantage-1 }}</p>
            </div>
            <div class="advantage-row">
              <img src="{{ block.settings.icon | img_url: 'master' }}">
              <p>{{ block.settings.advantage-2 }}</p>
            </div>
            <div class="advantage-row">
              <img src="{{ block.settings.icon | img_url: 'master' }}">
              <p>{{ block.settings.advantage-3 }}</p>
            </div>
          </div>
          <div class="plan-btn-wrapper">
            <a href="{{ block.settings.link }}" style="background-color: {{ block.settings.txt }}; color: {{ block.settings.btn-clr }}">{{ block.settings.btn }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .perfect-plan-{{ section.id }}{
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    width: 100%;
    background-color: {{ section.settings.bg }};
  }
  .perfect-plan-info{
    width: 100%;
    text-align: center;
    padding-bottom: 30px;
  }
  .perfect-plan-info h2{
    font-size: 48px;
    font-weight: 700;
    line-height: 57.6px;
    text-align: center;
    margin: 0;
    padding: 0;
    padding-bottom: 15px;
  }
