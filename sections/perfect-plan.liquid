  }
  .advantage-row{
    display: flex;
    align-items: center;
    column-gap: 12px;
    padding-bottom: 5px;
  }
  .advantage-row img{
    max-width: 20px;
    height: auto;
  }
  .advantage-row p{
    max-width: calc(100% - 12px);
    font-size: 16px;
    font-weight: 700;
    line-height: 22.4px;
    text-align: left;
    margin: 0;
    padding: 0;
  }
  .plan-btn-wrapper{
    width: 100%;
    
  }
  .plan-btn-wrapper a{
    width: 100%;
    display: inline-block;
    text-align: center;
    padding: 14px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 18px;
    font-weight: 500;
    line-height: 24px;
  }
  @media(max-width: 749px){
    .perfect-plan-{{ section.id }}{
     padding-top: {{ section.settings.mob-padding-top }}px;
    padding-bottom: {{ section.settings.mob-padding-bottom }}px;
    }
    .perfect-plan-info h2{
    font-size: 24px;
    font-weight: 700;
    line-height: 28.8px;
    text-align: center;
    margin: 0;
    padding: 0;
    padding-bottom: 10px;
  }
  .perfect-plan-info p{
    font-size: 16px;
    font-weight: 400;
    line-height: 22.4px;
    text-align: center;
    padding: 0;
    margin: 0;
  }
    .perfect-plan-col{
      flex: 100%;
      max-width: 100%;
      margin-bottom: 24px;
    }
  }
</style>

