<section class="norvana-features-{{ section.id }}">
  <div class="norvana-features-wrapper page-width">
    <div class="norvana-features-row norvana-features-slider-{{ section.id }}">
      {% for block in section.blocks %}
        <div class="norvana-features-col">
          <div class="feature-icon">
            <img src="{{ block.settings.icon | img_url: 'master' }}">
          </div>
          <div class="norvana-features-info">
            <h2>{{ block.settings.heading }}</h2>
            {{ block.settings.details }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .norvana-features-{{ section.id }}{
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    width: 100%;
    background-color: {{ section.settings.bg }};
  }
  .norvana-features-row{
    display: flex;
    align-items: flex-start;
    justify-content: center;
    column-gap: 20px;
  }
  .norvana-features-col{
    flex: 23%;
    max-width: 23%;
    background: #00080F;
    text-align: left;
    padding: 24px;
    border-radius: 16px;
  }
  .feature-icon{
    max-width: 52px;
    padding-bottom: 10px;
  }
  .feature-icon img{
    width: 100%;
    height: auto;
  }
  .norvana-features-info{
    text-align: left;
    
  }
 .norvana-features-info h2{
    margin: 0;
    padding: 0;
    padding-bottom: 10px;
    font-size: 18px;
    font-weight: 500;
    line-height: 25.2px;
    text-align: left;
    color: #fff
  }
  .norvana-features-info p{
      font-size: 16px;
      font-weight: 400;
      line-height: 22.4px;
      text-align: left;
      margin: 0;
      padding: 0;
      color: #fff;
      min-height: 135px;
  }
  @media(max-width: 749px){
    .norvana-features-{{ section.id }}{
    padding-top: {{ section.settings.mob-padding-top }}px;
    padding-bottom: {{ section.settings.mob-padding-bottom }}px;
    }
    .norvana-features-col{
      margin-right: 10px;
    }
  }
</style>

<script>
    $(document).ready(function(){

    $('.norvana-features-slider-{{ section.id }}').slick({
    dots: false,
    infinite: false,
    arrows: false,
    cssEase: 'linear',
    speed: 300,
    slidesToShow: 1.1,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 9999,
        settings: "unslick"
      },
      {
        breakpoint: 749,
        settings: {
          slidesToShow: 1.2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1.2,
          slidesToScroll: 1
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
    });
  });
</script>

{% schema %}
  {
    "name": "Norvana Features",
    "settings": [
      {
         "type": "range",
         "id": "padding-top",
         "label": "Section Top Padding",
         "default": 50,
         "min": 0,
         "max": 100,
         "step": 5,
         "unit": "px"
       },
       {
         "type": "range",
         "id": "padding-bottom",
         "label": "Section Bottom Padding",
         "default": 50,
         "min": 0,
         "max": 100,
         "step": 5,
         "unit": "px"
       },
       {
         "type": "range",
         "id": "mob-padding-top",
         "label": "Section Top Padding",
         "default": 40,
         "min": 0,
         "max": 100,
         "step": 5,
         "unit": "px"
       },
       {
         "type": "range",
         "id": "mob-padding-bottom",
         "label": "Section Bottom Padding",
         "default": 40,
         "min": 0,
         "max": 100,
         "step": 5,
         "unit": "px"
       },
       {
         "type": "color",
         "id": "bg",
         "label": "Section BG Color",
         "default": "#fff"
       },
    ],
    "blocks":[
      {
        "type":"feature",
        "name":"Feature",
        "settings":[
          {
             "type":"image_picker",
             "id":"icon",
             "label":"Select Icon"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "15-20%"
          },
          {
            "type": "richtext",
            "id": "details",
            "label": "Details",
            "default": "<p>Patients using Norvana medication have experienced significant weight loss, averaging 15-20% of their body weight</p>"
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Norvana Features", 
      "category": "section"
    }
  ]
}
{% endschema %}